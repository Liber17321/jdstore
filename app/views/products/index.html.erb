<div class="container-fluid">
    <div class="row">
        <% @products.each do |product| %>
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <!-- <img src="..." alt="..."> -->
                <%= link_to(image_tag(product.image_url(:thumb)), product_path(product)) %>
                <div class="caption">
                    <h3><%= product.title %></h3>
                    <p>$ <%= product.price %></p>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>
